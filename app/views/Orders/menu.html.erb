<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Welcome to the menu!</h1>

  <%= form_with(model: @order) do |form| %>
    <% if @order.errors.any? %>
      <div class="text-red-500">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
        <ul>
          <% @order.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <table class="min-w-full mb-4">
      <thead>
        <tr>
          <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Meal</th>
          <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Price</th>
          <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
          <th class="px-6 py-3 bg-gray-50"></th> <!-- Empty th for the Total Cost column -->
        </tr>
      </thead>
      <tbody>
        <% @meals.each do |meal| %>
          <tr>
            <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900 border-b"><%= meal.meals_name %></td>
            <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900 border-b"><%= meal.meals_price %></td>
            <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900 border-b">
              <div class="quantity-input">
                <%= form.fields_for :order_items, OrderItem.new do |order_item_fields| %>
                  <%= order_item_fields.hidden_field :meal_id, value: meal.id %>
                  <%= order_item_fields.hidden_field :order_id, value: @order.id %>
                  <%= order_item_fields.number_field :quantity, min: 0, class: "form-input" %>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium border-b">
              Total Cost: <!-- You can calculate and display the total cost here -->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mb-4 flex justify-end mr-6">
      <span>Total Bill:</span>
    </div>

    <%= form.number_field :user_id, value: current_user.id, class: "hidden" %>
    <%= form.submit "Place Order", class: "bg-red-400 text-white px-4 py-2 rounded hover:bg-red-700 cursor-pointer" %>
  <% end %>
</div>
