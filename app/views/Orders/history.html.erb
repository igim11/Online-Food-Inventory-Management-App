<h1 class="text-2xl font-bold mb-4">History of Orders</h1>

<div class="overflow-x-auto">
  <table class="table-auto w-full border-collapse border">
    <thead>
      <tr>
        <th class="border px-4 py-2">Date</th>
        <th class="border px-4 py-2">Order Number</th>
        <th class="border px-4 py-2">Meals</th>
        <th class="border px-4 py-2">Quantity</th>
        <th class="border px-4 py-2">Total Bill</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="border px-4 py-2"><%= order.created_at.strftime("%Y-%m-%d") %></td>
          <td class="border px-4 py-2"><%= order.id %></td>
          <td class="border px-4 py-2">
            <% order.order_items.each do |order_item| %>
              <%= order_item.meal.meals_name %><br>
            <% end %>
          </td>
          <td class="border px-4 py-2">
            <% order.order_items.each do |order_item| %>
              <%= order_item.quantity %><br>
            <% end %>
          </td>
          <td class="border px-4 py-2"><%= number_to_currency(order.total_bill) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
