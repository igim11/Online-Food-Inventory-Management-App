<%= form_with model: @ingredient, url: create_ingredients_url, method: :post do |form| %>
  <div class="mb-4">
    <%= form.label :ingredients_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :ingredients_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <%= form.label :quantity, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :quantity, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <%= form.label :unit, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :unit, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
